<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent2">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/white_background_allconers"

        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/designlinear"

             >
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/snametxt"
        android:text="Name: "
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-light"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/studentnameview"
        android:text="here"
        android:layout_below="@+id/snametxt"
        android:textSize="25sp"
        android:textColor="#00578E"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:fontFamily="sans-serif-light"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/srollnotxt"
        android:text="Roll no: "
        android:layout_below="@+id/studentnameview"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="sans-serif-light"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/srollnoview"
        android:layout_below="@+id/srollnotxt"
        android:text="here"
        android:textSize="25sp"
        android:textColor="#00578E"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:fontFamily="sans-serif-light"
        />


    <RadioGroup
        android:id="@+id/tattendance"
        android:layout_below="@+id/srollnoview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="58dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_marginLeft="58dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/present"
            android:text="Present"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:buttonTint="@color/custom_blue"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/absent"
            android:text="Absent"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginLeft="15dp"
            android:buttonTint="@color/custom_blue"
            android:layout_marginStart="15dp" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/leave"
            android:text="Leave"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginLeft="15dp"
            android:buttonTint="@color/custom_blue"
            android:layout_marginStart="15dp" />

    </RadioGroup>
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>